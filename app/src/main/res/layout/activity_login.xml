<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginTvConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:text="@string/login_tv_connection" />

        <EditText
            android:id="@+id/loginEtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/login_hint_email"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="10dp"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"/>

        <EditText
            android:id="@+id/loginEtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/login_hint_password"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:textColorHint="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/loginBtnConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary_color"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:text="@string/login_tv_connection" />
    </LinearLayout>
</RelativeLayout>
