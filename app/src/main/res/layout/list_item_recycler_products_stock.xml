<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/recycler_list_item_shape"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:paddingStart="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:id="@+id/recyclerProductsStockLayout">

    <TextView
        android:id="@+id/recyclerProductsStockTvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recyclerProductsStockCheckbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recyclerProductsStockTvCategory"
        android:layout_marginEnd="10dp"
        tools:text="Dentifrice"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/recyclerProductsStockTvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recyclerProductsStockCheckbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerProductsStockTvProductName"
        android:layout_marginEnd="10dp"
        tools:text="Produits mÃ©nagers"/>

    <CheckBox
        android:id="@+id/recyclerProductsStockCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:buttonTint="@color/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>